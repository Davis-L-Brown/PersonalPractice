<Window x:Class="WPF_Tutorial.Forms.Tutorial22"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tutorial.Forms"
        mc:Ignorable="d"
        Title="Light and Dark Modes" Height="400" Width="400">
    <GroupBox Header =" GroupBox">
        <UniformGrid Rows="7" HorizontalAlignment="Center">
            <Button Content="Button" Height="50" Width="100"/>
            <TextBlock Text="text" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            <TextBox Text=" some text" TextAlignment="center" Height="20"/>
            <RadioButton Name="DarkMode" Content="Dark Mode" HorizontalAlignment="Center" Height="20"/>
            <RadioButton Name="BlueMode" Content="Blue Mode" HorizontalAlignment="Center" Height="20"/>
            <RadioButton Name="GreyMode" Content="Grey Mode" HorizontalAlignment="Center" Height="20"/>
            <RadioButton Name="LiteMode" Content="Lite Mode" HorizontalAlignment="Center" Height="20"/>

        </UniformGrid>
        
    </GroupBox>
</Window>
